        <div class="drawer-separator"></div>
        <a class="mdl-navigation__link" href="/writing/create-new">Start writing</a>
        <div class="drawer-separator"></div>
        <a class="mdl-navigation__link" href="/home/logout">Logout</a>
        <div class="drawer-separator"></div>
    </nav>
