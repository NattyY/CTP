@model CTP.Models.ViewModels.FolderContentItemPageViewModel
@* All HTML throughout taken and modified from: https://getmdl.io/components/index.html *@


<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        @Html.Partial("Partials/Breadcrumbs_FolderContentItem", Model)
        <h1>@Model.Title</h1>
    </div>

    @foreach (var contentItem in Model.ContentItems)
    {
        @Html.Partial(contentItem.View, contentItem)
    }

    <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp mdl-cell--4-col-tablet mdl-cell--4-col-phone">
        <div class="mdl-card__title mdl-card--expand mdl-card--border">
            <h2 class="mdl-card__title-text">Create new</h2>
        </div>
        <div class="mdl-card__actions">
            @{ Html.RenderAction("CreateContentItemForm", "Projects", new { categoryId = Model.Category.Id, parentContentItemId = Model.Id }); }
        </div>
    </div>

</div>
