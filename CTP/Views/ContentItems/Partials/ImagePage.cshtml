@model CTP.Models.ViewModels.ImageContentItemPageViewModel

<div class="mdl-grid">
    <div class="mdl-color--white mdl-shadow--4dp mdl-cell mdl-cell--12-col mdl-card page--content-image">
        <div class="mdl-card__title">
            @Html.Partial("Partials/Breadcrumbs_FolderContentItem", Model)
        </div>
        <div class="mdl-card__title">
            <h1>@Model.Title</h1>
        </div>
        <div class="mdl-card__supporting-text">
            <img src="@Model.ImageUrl" alt="@Model.Title" />
        </div>
    </div>
</div>