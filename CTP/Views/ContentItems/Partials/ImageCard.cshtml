@model CTP.Models.ViewModels.ImageContentItemCardViewModel

<div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp card--content-image mdl-cell--4-col-tablet mdl-cell--4-col-phone">
    <div class="mdl-card__title mdl-card--expand" style="background-image: url('@Model.ImageUrl');">
    </div>
    <div class="mdl-card__actions">
        <span class="content-image__name"><a href="@Model.Url">@Model.Title</a></span>
    </div>
    <div class="mdl-card__menu">
        <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" id="menu-@(Model.Id)">
            <i class="material-icons">more_vert</i>
        </button>
        <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="menu-@(Model.Id)">
            <li class="mdl-menu__item"><a href="@Model.Url">View</a></li>
            <li class="mdl-menu__item"><a href="/projects/deletecontentitem?id=@Model.Id">Delete</a></li>
        </ul>
    </div>
</div>