@model CTP.Models.ViewModels.ProjectCategoryViewModel
@{ Layout = "/Views/Shared/_LoggedInLayout.cshtml"; }

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        @Html.Partial("Partials/Breadcrumbs_Category", Model.Category)
        <h1>@Model.Category.Title</h1>
    </div>

    @foreach (var contentItem in Model.ContentItems)
    {
        @Html.Partial(contentItem.View, contentItem)
    }

    <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp mdl-cell--4-col-tablet mdl-cell--4-col-phone">
        <div class="mdl-card__title mdl-card--expand mdl-card--border nat-background">
            <h2 class="mdl-card__title-text">Create new</h2>
        </div>
        <div class="mdl-card__actions">
            @{ Html.RenderAction("CreateContentItemForm", "Projects", new { categoryId = Model.Category.Id }); }
        </div>
    </div>

</div>

