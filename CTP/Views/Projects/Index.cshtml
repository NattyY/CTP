@model CTP.Models.ViewModels.ProjectHubViewModel
@{ Layout = "/Views/Shared/_LoggedInLayout.cshtml"; }
@* All HTML throughout taken and modified from: https://getmdl.io/components/index.html *@


<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        <h1>Project Hub</h1>
    </div>

    @foreach (var project in Model.Projects)
    {
        <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp card--project">
            <div class="mdl-card__title mdl-card--expand mdl-card--border nat-background">
                <h2 class="mdl-card__title-text">@project.Title</h2>
            </div>
            <div class="mdl-card__supporting-text">@project.Description</div>
            <div class="mdl-card__actions">
                <a href="@project.Url" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">View project</a>
            </div>
        </div>
    }

    <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp card--project">
        <div class="mdl-card__title mdl-card--expand mdl-card--border nat-background">
            <h2 class="mdl-card__title-text">Create a new project</h2>
        </div>
        <div class="mdl-card__supporting-text">
            @{ Html.RenderAction("CreateProjectForm", "Projects"); }
        </div>
    </div>

</div>
