@model CTP.Models.ViewModels.ProjectViewModel
@{ Layout = "/Views/Shared/_LoggedInLayout.cshtml"; }

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        @Html.Partial("Partials/Breadcrumbs_Project", Model.Project)
        <h1>@Model.Project.Title</h1>
    </div>

    <div class="mdl-cell mdl-cell--3-col mdl-card mdl-shadow--2dp mdl-cell--4-col-tablet mdl-cell--4-col-phone nat-background">
        <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text">My Writing</h2>
        </div>
        <div class="mdl-card__supporting-text mdl-card--border">Where your stories are kept</div>
        <div class="mdl-card__actions">
            <a href="@Model.Project.WritingUrl" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">View My Writing</a>
        </div>
    </div>

    @foreach (var category in Model.Categories)
    {
        <div class="mdl-cell mdl-cell--3-col mdl-card mdl-shadow--2dp mdl-cell--4-col-tablet mdl-cell--4-col-phone nat-background">
            <div class="mdl-card__title mdl-card--expand"></div>
            <div class="mdl-card__actions">
                <a href="@category.Url" class="mdl-button mdl-js-button mdl-button--accent">@category.Title</a>
            </div>
        </div>
    }

    <div class="mdl-cell mdl-cell--3-col mdl-card mdl-shadow--2dp mdl-cell--4-col-tablet mdl-cell--4-col-phone">
        <div class="mdl-card__title mdl-card--expand mdl-card--border nat-background">
            <h2 class="mdl-card__title-text">Create story element</h2>
        </div>
        <div class="mdl-card__supporting-text">@{ Html.RenderAction("CreateCategoryForm", "Projects", new { projectId = Model.Project.Id }); }</div>
    </div>

</div>